<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity" >

    <SurfaceView
        android:id="@+id/live_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/target"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/target"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_alignParentBottom="true">
    </LinearLayout>


    <Button
        android:id="@+id/detect"
        android:background="@drawable/detect_button"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="Detect"
        style="@style/button_text"
        android:textSize="22dp"
        android:layout_above="@+id/placeholder"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFFFF"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/black_button"
            android:text="Fabric"
            android:id="@+id/fabric"
            style="@style/button_text"
            android:layout_weight="1"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/black_button"
            android:text="Food"
            android:id="@+id/food"
            style="@style/button_text"
            android:layout_weight="1"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/black_button"
            android:text="Liquid"
            android:id="@+id/liquid"
            style="@style/button_text"
            android:layout_weight="1"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/black_button"
            android:text="Mine"
            android:id="@+id/mine"
            android:layout_weight="1"
            style="@style/button_text"
            android:longClickable="true"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/detect"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/detect"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/detect"
        android:gravity="center">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/button_text"
            android:textColor="#000000"
            android:textSize="14dp"
            android:text="Detecting: "
            android:id="@+id/smallTextView"/>

        <com.example.org.charles.android.camdetector.OutlineTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cotton"
            android:id="@+id/material"
            android:gravity="center"
            style="@style/button_text"
            android:textColor="#000000"
            android:textSize="24dp"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="10"
            android:layout_margin="4dp"
            android:layout_below="@id/smallTextView"
            android:layout_alignRight="@id/smallTextView"/>
    </RelativeLayout>

</RelativeLayout>